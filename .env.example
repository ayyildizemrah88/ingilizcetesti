# Skills Test Center - Environment Variables

# Application
SECRET_KEY=your-super-secret-key-change-in-production
DEBUG=False

# Database (PostgreSQL)
DATABASE_URL=postgresql://skillstest:securepassword@db:5432/skillstestdb
POSTGRES_USER=skillstest
POSTGRES_PASSWORD=securepassword
POSTGRES_DB=skillstestdb

# Redis (Session Storage)
REDIS_URL=redis://redis:6379/0

# JWT
JWT_SECRET=your-jwt-secret-key

# Stripe (Payments)
STRIPE_SECRET=sk_test_your_stripe_key

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Email Configuration (Multiple SMTP Servers)
MAIL_CONFIGS=1,2
MAIL_1_SERVER=smtp.gmail.com
MAIL_1_PORT=587
MAIL_1_USER=your-email@gmail.com
MAIL_1_PASS=your-app-password
MAIL_2_SERVER=smtp.sendgrid.net
MAIL_2_PORT=587
MAIL_2_USER=apikey
MAIL_2_PASS=your-sendgrid-api-key
